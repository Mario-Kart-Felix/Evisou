@using Evious.Core.Config
@using Evious.Web
@using Evious.Account.Contract
@if (Session["SessionForLogin"] != null)
{
    <script>
        window.location.href = "@Url.Action("Index")";
    </script>
}
<!DOCTYPE html>
<!--[if IE 8]> <html lang="zh-cn" class="ie8 no-js"> <![endif]-->
<!--[if IE 9]> <html lang="zh-cn" class="ie9 no-js"> <![endif]-->
<!--[if !IE]><!-->
<html lang="zh-cn" class="no-js">
<!--<![endif]-->
<!-- BEGIN HEAD -->
<head>
    <meta charset="utf-8" />
    <title>@CachedConfigContext.Current.SettingConfig.WebSiteTitle</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <meta content="@CachedConfigContext.Current.SettingConfig.WebSiteDescription" name="description" />
    <meta content="@CachedConfigContext.Current.SettingConfig.WebSiteKeywords" name="keywords" />
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    @Styles.Render("~/Assets/global/plugins/font-awesome/css/css"
, "~/Assets/global/plugins/simple-line-icons/css"
, "~/assets/global/plugins/bootstrap/css/css"
, "~/Assets/global/plugins/uniform/css/css")
    @*<link href="@Url.StaticFile("/assets/global/plugins/font-awesome/css/font-awesome.min.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.StaticFile("/assets/global/plugins/simple-line-icons/simple-line-icons.min.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.StaticFile("/assets/global/plugins/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.StaticFile("/assets/global/plugins/uniform/css/uniform.default.css")" rel="stylesheet" type="text/css" />*@
    <!-- END GLOBAL MANDATORY STYLES -->
    <!-- BEGIN PAGE LEVEL STYLES -->
    <link href="@Url.StaticFile("/assets/admin/pages/css/lock.css")" rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL STYLES -->
    <!-- BEGIN THEME STYLES -->
    <link href="@Url.StaticFile("/assets/global/css/components.css")" id="style_components" rel="stylesheet" type="text/css" />
    <link href="@Url.StaticFile("/assets/global/css/plugins.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.StaticFile("/assets/admin/layout/css/layout.css")" rel="stylesheet" type="text/css" />
    @if (Request.Cookies["currentTheme"] == null)
    {
        <link href="@Url.StaticFile("/assets/admin/layout/css/themes/default.css")" rel="stylesheet" type="text/css" id="style_color" />
    }
    else
    {
        <link rel="stylesheet" type="text/css" id="style_color" />
    }
    @*<link href="@Url.StaticFile("/assets/admin/layout/css/themes/default.css")" rel="stylesheet" type="text/css" id="style_color" />*@
    <link href="@Url.StaticFile("/assets/admin/layout/css/custom.css")" rel="stylesheet" type="text/css" />
    <!-- END THEME STYLES -->
    <link rel="shortcut icon" href="favicon.ico" />
</head>
<!-- END HEAD -->
<!-- BEGIN BODY -->
<body>
    <div class="page-lock">
        <div class="page-logo">
            <a class="brand" href="index.html">
                <img src="@Url.StaticFile("/assets/admin/layout/img/logo-big.png")" alt="logo" />
            </a>
        </div>
        <div class="page-body">
            <div class="lock-head">
                锁屏中
            </div>
            <div class="lock-body">
                <div class="pull-left lock-avatar-block">
                    <img src="@Evious.Web.AdminApplication.Common.AdminUserContext.Current.LoginInfo.Avatar" class="lock-avatar">
                </div>
                <form class="lock-form pull-left" method="post">
                    <h4>@Evious.Web.AdminApplication.Common.AdminUserContext.Current.LoginInfo.LoginName</h4>
                    <input type="hidden" name="username" value="@Evious.Web.AdminApplication.Common.AdminUserContext.Current.LoginInfo.LoginName" />
                    <div class="form-group">
                        <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="密码" name="password" />
                        <span class="help-block">@Html.ValidationMessage("password")</span>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-success uppercase">登录</button>
                    </div>
                </form>
            </div>
            <div class="lock-bottom">
                <a href="@Url.Action("Logout", "Auth", new { Area = "Account"})">不是 @Evious.Web.AdminApplication.Common.AdminUserContext.Current.LoginInfo.LoginName?</a>
            </div>
        </div>
        <div class="page-footer-custom">
            @DateTime.Now.Year &copy; Evisou by Vson.
        </div>
    </div>
    <!-- BEGIN JAVASCRIPTS(Load javascripts at bottom, this will reduce page load time) -->
    <!-- BEGIN CORE PLUGINS -->
    <!--[if lt IE 9]>
    <script src="@Url.StaticFile("/assets/global/plugins/respond.min.js")"></script>
    <script src="@Url.StaticFile("/assets/global/plugins/excanvas.min.js")"></script>
    <![endif]-->
    <script src="@Url.StaticFile("/assets/global/plugins/jquery.min.js")" type="text/javascript"></script>
    <script src="@Url.StaticFile("/assets/global/plugins/jquery-migrate.min.js")" type="text/javascript"></script>
    <script src="@Url.StaticFile("/assets/global/plugins/bootstrap/js/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.StaticFile("/assets/global/plugins/jquery.blockui.min.js")" type="text/javascript"></script>
    <script src="@Url.StaticFile("/assets/global/plugins/uniform/jquery.uniform.min.js")" type="text/javascript"></script>
    <script src="@Url.StaticFile("/assets/global/plugins/jquery.cokie.min.js")" type="text/javascript"></script>
    <!-- END CORE PLUGINS -->
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="@Url.StaticFile("/assets/global/plugins/backstretch/jquery.backstretch.min.js")" type="text/javascript"></script>
    <!-- END PAGE LEVEL PLUGINS -->
    <script src="@Url.StaticFile("/assets/global/scripts/metronic.js")" type="text/javascript"></script>
    <script src="@Url.StaticFile("/assets/admin/layout/scripts/demo.js")" type="text/javascript"></script>
    <script src="@Url.StaticFile("/assets/admin/layout/scripts/layout.js")" type="text/javascript"></script>
    <script>
        jQuery(document).ready(function () {
            Metronic.init(); // init metronic core components
            Layout.init(); // init current layout
            Demo.init();
        });
    </script>
    <!-- END JAVASCRIPTS -->
</body>
<!-- END BODY -->
</html>