@using Evisou.Core.Config
@using Evisou.Web
@using Evisou.Account.Contract
@if (Session["SessionForLogin"] != null)
{
    <script>
        window.location.href = "@Url.Action("Index")";
    </script>
}
<!DOCTYPE html>
<!--[if IE 8]> <html lang="zh-cn" class="ie8 no-js"> <![endif]-->
<!--[if IE 9]> <html lang="zh-cn" class="ie9 no-js"> <![endif]-->
<!--[if !IE]><!-->
<html lang="zh-cn" class="no-js">
<!--<![endif]-->
<!-- BEGIN HEAD -->
<head>
    <meta charset="utf-8" />
    <title>@CachedConfigContext.Current.SettingConfig.WebSiteTitle</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <meta content="@CachedConfigContext.Current.SettingConfig.WebSiteDescription" name="description" />
    <meta content="@CachedConfigContext.Current.SettingConfig.WebSiteKeywords" name="keywords" />
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    @Styles.Render("~/Assets/global/plugins/font-awesome/css/css"
, "~/Assets/global/plugins/simple-line-icons/css"
, "~/assets/global/plugins/bootstrap/css/css"
, "~/Assets/global/plugins/uniform/css/css"
, "~/Assets/global/plugins/bootstrap-switch/css/css")
 
    <!-- BEGIN THEME GLOBAL STYLES -->
    <link href="@Url.StaticFile("/assets/global/css/components-md.min.css")" rel="stylesheet" id="style_components" type="text/css" />
    <link href= "@Url.StaticFile(" / assets/global/css/plugins-md.min.css")" rel="stylesheet" type="text/css" />
    <!-- END THEME GLOBAL STYLES -->


    <!-- END GLOBAL MANDATORY STYLES -->
    <!-- BEGIN PAGE LEVEL STYLES -->
    <link href="@Url.StaticFile("/assets/pages/css/lock.css")" rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL STYLES -->
    <!-- BEGIN THEME STYLES -->
   
    @if (Request.Cookies["currentTheme"] == null)
    {
        <link href="@Url.StaticFile("/assets/layouts/layout/css/themes/default.css")" rel="stylesheet" type="text/css" id="style_color" />
    }
    else
    {
        <link rel="stylesheet" type="text/css" id="style_color" />
    }
    @*<link href="@Url.StaticFile("/assets/admin/layout/css/themes/default.css")" rel="stylesheet" type="text/css" id="style_color" />*@
    <link href="@Url.StaticFile("/assets/layouts/layout/css/custom.css")" rel="stylesheet" type="text/css" />
    <!-- END THEME STYLES -->
    <link rel="shortcut icon" href="favicon.ico" />
</head>
<!-- END HEAD -->
<!-- BEGIN BODY -->
<body>
    <div class="page-lock">
        <div class="page-logo">
            <a class="brand" href="index.html">
                <img src="@Url.StaticFile("/assets/layouts/layout/img/logo-big.png")" alt="logo" />
            </a>
        </div>
        <div class="page-body">
            <div class="lock-head">
                锁屏中
            </div>
            <div class="lock-body">
                <div class="pull-left lock-avatar-block">
                    @if (Request.Cookies["headeravatar"] != null)
                    {
                        <img src="@Url.StaticFile(Server.UrlDecode(Request.Cookies["headeravatar"].Value))" class="lock-avatar">
                        @*<img alt="" class="img-circle" src="@Url.StaticFile(Server.UrlDecode(Request.Cookies["headeravatar"].Value))" id="headeravatar" />*@
                    }
                    @*<img src="@Evisou.Web.AdminApplication.Common.AdminUserContext.Current.LoginInfo.Avatar" class="lock-avatar">*@
                </div>
                <form class="lock-form pull-left" method="post">
                    <h4>@Evisou.Web.AdminApplication.Common.AdminUserContext.Current.LoginInfo.LoginName</h4>
                    <input type="hidden" name="username" value="@Evisou.Web.AdminApplication.Common.AdminUserContext.Current.LoginInfo.LoginName" />
                    <div class="form-group">
                        <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="密码" name="password" />
                        <span class="help-block">@Html.ValidationMessage("password")</span>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-success uppercase">登录</button>
                    </div>
                </form>
            </div>
            <div class="lock-bottom">
                <a href="@Url.Action("Logout", "Auth", new { Area = "Account"})">不是 @Evisou.Web.AdminApplication.Common.AdminUserContext.Current.LoginInfo.LoginName?</a>
            </div>
        </div>
        <div class="page-footer-custom">
            @DateTime.Now.Year &copy; Evisou by Vson.
        </div>
    </div>
    <!-- BEGIN JAVASCRIPTS(Load javascripts at bottom, this will reduce page load time) -->
    <!-- BEGIN CORE PLUGINS -->
    <!--[if lt IE 9]>
    @Scripts.Render("~/bundles/ifie9")
    <![endif]-->
@Scripts.Render("~/Bundles/jquery", "~/bundles/bootstrap", "~/Core/Plugins")
    <!-- END CORE PLUGINS -->
    <!-- BEGIN THEME GLOBAL SCRIPTS -->
    <script src="@Url.StaticFile("/assets/global/scripts/app.min.js")" type="text/javascript"></script>
    <!-- END THEME GLOBAL SCRIPTS -->
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="@Url.StaticFile("/assets/pages/scripts/lock.min.js")" type="text/javascript"></script>
    <!-- END PAGE LEVEL SCRIPTS -->
    <script>
        //jquery(document).ready(function () {
        //    metronic.init(); // init metronic core components
        //    layout.init(); // init current layout
        //    demo.init();
        //});
    </script>
    <!-- END JAVASCRIPTS -->
</body>
<!-- END BODY -->
</html>