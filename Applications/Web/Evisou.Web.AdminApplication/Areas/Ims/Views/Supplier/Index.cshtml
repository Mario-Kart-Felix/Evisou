@using Evisou.Web
@using Evisou.Framework.Contract
@using Evisou.Framework.Utility
@using Evisou.Framework.Web.Controls
@using Evisou.Account.Contract
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
   
}

@section PageLevelPluginsCSS{
@Styles.Render(
    "~/assets/global/plugins/datatables/plugins/bootstrap/css"
    )
}

@section PageLevelCSS{

}

@section PageLevelPluginScript{
@Scripts.Render("~/Plugins/Supplier/Index")
}

@section PageLevelScript{
@Scripts.Render("~/Script/Supplier/Index")
}

<div class="row">  
    
    <div class="col-md-12">
        <div class="block">
            <strong>供应商相关：</strong>
            供应商管理汇总！
        </div>
        <!-- Begin: life time stats -->
        <div class="portlet">
            <div class="portlet-title">
                <div class="caption">

                    <a class="btn btn-sm default red-stripe delete" href="javascript:;">
                        <i class="fa fa-trash-o"></i>
                        <span class="hidden-480">
                            删除
                        </span>
                    </a>
                    <a data-modal="" href="@Url.Action("Create")" class="btn btn-sm default blue-stripe">
                        <i class="fa fa-plus"></i>
                        <span class="hidden-480">
                            新建
                        </span>
                    </a>

                </div>
                <div class="actions">
                   
                </div>
            </div>
            <div class="portlet-body">

                <div class="table-container">
                    <div class="table-actions-wrapper">
                        <span>

                        </span>
                        <select class="table-group-action-input form-control input-inline input-small input-sm" name="status">
                            <option value="">选择...</option>                            
                            <option value="delete">删除</option>
                        </select>
                        <button class="btn btn-sm yellow table-group-action-submit"><i class="fa fa-check"></i> 提交</button>

                    </div>

                    <table class="table table-striped table-bordered table-hover table-x" id="datatable_supplier">
                        <thead>
                            <tr role="row" class="heading">
                                <th width="1%">
                                    <input type="checkbox" class="group-checkable">
                                </th>

                                <th width="10%">
                                    供应商
                                </th>
                                <th width="10%">
                                    平台
                                </th>
                                <th width="10%">
                                    网址
                                </th>
                                <th width="10%">
                                    客服
                                </th>
                                <th width="10%">
                                    客服电话
                                </th>
                                <th width="5%">
                                    联系人/经理
                                </th>
                                <th width="5%">
                                    联系人电话/经理电话
                                </th>
                                <th width="15%">
                                    地址
                                </th>                               
                                <th width="10%">
                                    <a href="javascript:;" class="default search-table">
                                        搜索 <i class="icon-magnifier"></i>
                                    </a>
                                </th>
                            </tr>
                            <tr role="row" class="filter">
                                <td></td>
                                <td>
                                    <input type="text" class="form-control form-filter input-sm" name="name">
                                </td>
                                <td>
                                    <input type="text" class="form-control form-filter input-sm" name="platform">
                                </td>
                                <td>
                                    <input type="text" class="form-control form-filter input-sm" name="url">
                                </td>
                                <td>
                                    <input type="text" class="form-control form-filter input-sm" name="cs">
                                </td>
                                <td>
                                    <input type="text" class="form-control form-filter input-sm" name="csphone">
                                </td>
                                <td>
                                    <input type="text" class="form-control form-filter input-sm" name="contact">
                                </td>
                                <td>
                                    <input type="text" class="form-control form-filter input-sm" name="contactphone">
                                </td>
                                <td>
                                    
                                </td>                                                         
                                <td>
                                    <div class="margin-bottom-5">
                                        <button class="btn btn-icon-only yellow filter-submit margin-bottom" title="搜索"><i class="fa fa-search"></i></button>
                                        <button class="btn btn-icon-only red filter-cancel" title="重置"><i class="fa fa-times"></i></button>
                                    </div>
                                </td>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>

                </div>
            </div>
        </div>
        <!-- End: life time stats -->

    </div>
</div>

