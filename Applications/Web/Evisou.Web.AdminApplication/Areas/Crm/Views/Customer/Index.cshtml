@using Evisou.Web
@using Evisou.Framework.Contract
@using Evisou.Framework.Utility
@using Evisou.Framework.Web.Controls
@using Evisou.Account.Contract
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section PageLevelPluginsCSS{
    <link rel="stylesheet" type="text/css" href="@Url.StaticFile("/assets/global/plugins/select2/select2.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.StaticFile("/assets/global/plugins/datatables/extensions/Scroller/css/dataTables.scroller.min.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.StaticFile("/assets/global/plugins/datatables/extensions/ColReorder/css/dataTables.colReorder.min.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.StaticFile("/assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.css")" />
}

@section PageLevelCSS{
<link rel="stylesheet" type="text/css" href="@Url.StaticFile("/assets/global/plugins/bootstrap-datepicker/css/datepicker.css")" />
}

@section PageLevelPluginScript{
    <script type="text/javascript" src="@Url.StaticFile("/assets/global/plugins/select2/select2.min.js")"></script>
    <script type="text/javascript" src="@Url.StaticFile("/assets/global/plugins/datatables/media/js/jquery.dataTables.min.js")"></script>
    <script type="text/javascript" src="@Url.StaticFile("/assets/global/plugins/datatables/extensions/TableTools/js/dataTables.tableTools.min.js")"></script>
    <script type="text/javascript" src="@Url.StaticFile("/assets/global/plugins/datatables/extensions/ColReorder/js/dataTables.colReorder.min.js")"></script>
    <script type="text/javascript" src="@Url.StaticFile("/assets/global/plugins/datatables/extensions/Scroller/js/dataTables.scroller.min.js")"></script>
    <script type="text/javascript" src="@Url.StaticFile("/assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.js")"></script>
    <script type="text/javascript" src="@Url.StaticFile("/assets/global/plugins/jquery-validation/js/jquery.validate.min.js")"></script>
    <script type="text/javascript" src="@Url.StaticFile("/assets/global/plugins/jquery-validation/js/additional-methods.min.js")"></script>
    <script type="text/javascript" src="@Url.StaticFile("/assets/global/plugins/jquery-validation/js/jquery.validate.unobtrusive.js")"></script>
    <script type="text/javascript" src="@Url.StaticFile("/assets/global/plugins/jquery-validation/js/localization/messages_zh.min.js")"></script>
    <script type="text/javascript" src="@Url.StaticFile("/assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js")"></script>
    <script type="text/javascript" src="@Url.StaticFile("/Assets/global/plugins/bootstrap-datepicker/js/locales/bootstrap-datepicker.zh-CN.js")"></script>

    
}

@section PageLevelScript{
    <script type="text/javascript" src="@Url.StaticFile("/assets/global/scripts/datatable.js")"></script>
    <script type="text/javascript" src="@Url.StaticFile("/assets/admin/pages/scripts/customer-x.js")"></script>
    <script type="text/javascript" src="@Url.StaticFile("/assets/admin/layout/scripts/modalform.js")"></script>
}

@section JSIncluds{
    Customer.init();
}

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <strong>客户管理相关：</strong>
            请来客户管理汇总！
        </div>
        <!-- Begin: life time stats -->
        <div class="portlet">
            <div class="portlet-title">
                <div class="caption">

                    <a class="btn btn-sm default red-stripe delete" href="javascript:;">
                        <i class="fa fa-trash-o"></i>
                        <span class="hidden-480">
                            删除
                        </span>
                    </a>
                    <a data-modal="" href="@Url.Action("Create")" class="btn btn-sm default blue-stripe">
                        <i class="fa fa-plus"></i>
                        <span class="hidden-480">
                            新建
                        </span>
                    </a>

                </div>
                <div class="actions">
                   
                </div>
            </div>
            <div class="portlet-body">

                <div class="table-container">
                    <div class="table-actions-wrapper">
                        <span>

                        </span>
                        <select class="table-group-action-input form-control input-inline input-small input-sm" name="status">
                            <option value="">选择...</option>                            
                            <option value="delete">删除</option>
                        </select>
                        <button class="btn btn-sm yellow table-group-action-submit"><i class="fa fa-check"></i> 提交</button>

                    </div>

                    <table class="table table-striped table-bordered table-hover table-x" id="datatable_customer">
                        <thead>
                            <tr role="row" class="heading">
                                <th width="1%">
                                    <input type="checkbox" class="group-checkable">
                                </th>

                                <th width="5%">
                                    客户名
                                </th>
                                <th width="5%">
                                    编号
                                </th>
                                <th width="5%">
                                    电话
                                </th>
                                <th width="5%">
                                    性别
                                </th>
                                <th width="5%">
                                    类型
                                </th>
                                <th width="5%">
                                    年龄
                                </th>
                                <th width="5%">
                                    职业
                                </th>
                                <th width="5%">
                                    职业顾问
                                </th>
                                <th width="5%">
                                    添加时间
                                </th>
                                <th width="5%">
                                    来电数
                                </th>

                                <th width="10%">
                                    操作
                                </th>
                            </tr>
                            <tr role="row" class="filter">
                                <td></td>

                                <td>
                                    <input type="text" class="form-control form-filter input-sm" name="name">
                                </td>
                                <td>
                                    <input type="email" class="form-control form-filter input-sm" name="number">
                                </td>
                                <td>
                                    
                                    <input type="tel" class="form-control form-filter input-sm" name="tel">
                                </td>
                                <td>
                                    @Html.DropDownList("Gender", null, "全部", new { @class = "form-control form-filter input-sm",@name="gender" })                                    
                                </td>
                                <td>
                                    @Html.DropDownList("Category", null, "全部", new { @class = "form-control form-filter input-sm",@name="category" })
                                </td>
                                <td>
                                    @Html.DropDownList("AgeGroup", null, "全部", new { @class = "form-control form-filter input-sm",@name="agegroup" })
                                </td>
                                <td>
                                    @Html.DropDownList("Profession", null, "全部", new { @class = "form-control form-filter input-sm",@name="profession" })
                                </td>
                                <td>
                                    <input type="text" class="form-control form-filter input-sm" name="username">
                                </td>
                                <td>
                                    <input type="text" class="form-control form-filter input-sm date-picker" name="createtime">
                                </td>
                                <td>
                                    <input type="number" class="form-control form-filter input-sm" name="count">
                                </td>
                                <td>
                                    <div class="margin-bottom-5">
                                        <button class="btn btn-icon-only yellow filter-submit margin-bottom" title="搜索"><i class="fa fa-search"></i></button>
                                        <button class="btn btn-icon-only red filter-cancel" title="重置"><i class="fa fa-times"></i></button>
                                    </div>
                                </td>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>

                </div>
            </div>
        </div>
        <!-- End: life time stats -->

    </div>
</div>