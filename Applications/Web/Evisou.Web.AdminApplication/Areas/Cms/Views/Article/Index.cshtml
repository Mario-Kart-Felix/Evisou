<style>
.bootstrap-tagsinput {
         width: 500px;
         height: 90px;
    }
.hottag {
        margin: 2px;
        padding: 5px;
        cursor: pointer;
    }
</style>
<div class="row">

    <div class="col-md-12">
        <div class="block">
            <strong>文章：</strong>
            文章所有
        </div>
        <!-- Begin: life time stats -->
        <div class="portlet">
            <div class="portlet-title">
                <div class="caption">
                    <a class="btn btn-sm default red-stripe delete" href="javascript:;">
                        <i class="fa fa-trash-o"></i>
                        <span class="hidden-480">
                            删除
                        </span>
                    </a>
                    <a data-modal="" href="@Url.Action("Create")" class="btn btn-sm default blue-stripe" title='添加新文章'>
                        <i class="fa fa-plus"></i>
                        <span class="hidden-480">
                            新建
                        </span>
                    </a>

                </div>
                <div class="actions">

                </div>
            </div>
            <div class="portlet-body">
                <div class="table-container">
                    <div class="table-actions-wrapper">
                        <span>

                        </span>
                        <select class="table-group-action-input form-control input-inline input-small input-sm" name="status">
                            <option value="">选择...</option>
                            <option value="delete">删除</option>
                        </select>
                        <button class="btn btn-sm yellow table-group-action-submit"><i class="fa fa-check"></i> 提交</button>

                    </div>

                    <table class="table table-striped table-bordered table-hover table-x" id="datatable_article">
                        <thead>
                            <tr role="row" class="heading">
                                <th width="1%">
                                    <input type="checkbox" class="group-checkable">
                                </th>

                                <th width="15%">
                                    文章标题
                                </th>
                                <th width="15%">
                                    频道
                                </th>
                                <th width="55%">
                                    内容
                                </th>
                                <th width="10%">
                                    <a href="javascript:;" class="default search-table">
                                        搜索 <i class="icon-magnifier"></i>
                                    </a>
                                </th>
                            </tr>
                            <tr role="row" class="filter">
                                <td></td>

                                <td>
                                    <input type="text" class="form-control form-filter input-sm" name="title">
                                </td>
                                <td>
                                    @Html.DropDownList("ChannelId", null, "所有频道", new { @class = "form-control form-filter input-sm", @name = "ChannelId" })
                                </td>
                                <td>
                                    <input type="text" class="form-control form-filter input-sm" name="content">
                                </td>
                                <td>
                                    <div class="margin-bottom-5">
                                        <button class="btn btn-icon-only yellow filter-submit margin-bottom" title="搜索"><i class="fa fa-search"></i></button>
                                        <button class="btn btn-icon-only red filter-cancel" title="重置"><i class="fa fa-times"></i></button>
                                    </div>
                                </td>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>

                </div>
            </div>
        </div>
        <!-- End: life time stats -->

    </div>
</div>


