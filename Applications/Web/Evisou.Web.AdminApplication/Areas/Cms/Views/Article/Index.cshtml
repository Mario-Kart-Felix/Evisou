@section PageLevelScript{
    <script type="text/javascript" src="@Url.StaticFile("/assets/global/scripts/datatable.js")"></script>
    <script type="text/javascript" src="@Url.StaticFile("/Assets/global/scripts/modalform.js")"></script>
    <script type="text/javascript" src="@Url.StaticFile("/Assets/pages/scripts/cms/article.js")"></script>
