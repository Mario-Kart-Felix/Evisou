@using Evious.Framework.Contract
@using Evious.Framework.Web.Controls
@using Evious.Ims.Contract.Model
@using Evious.Web
@model Supplier
@{
    Layout = "~/Views/Shared/_Layout.Edit.cshtml";
}
@section PageSpecificJavascriptIncludes{
<script type="text/javascript" src="@Url.StaticFile("/assets/admin/plugins/bootstrap-switch/js/bootstrap-switch.min.js")"></script>
<script type="text/javascript" src="@Url.StaticFile("/assets/admin/plugins/jquery-inputmask/jquery.inputmask.bundle.min.js")"></script>
<script type="text/javascript" src="@Url.StaticFile("/assets/admin/scripts/custom/form-validation.js")"></script>
}
@section PageSpecificStyleSheetIncludes{
    <link rel="stylesheet" type="text/css" href="@Url.StaticFile("/assets/admin/plugins/bootstrap-switch/css/bootstrap-switch.min.css")" />
}

@section ModualJavascriptIncludes{
    Custom.init();
    }

@section MainContent{

    <div class="tabbable tabbable-custom">
        <ul class="nav nav-tabs tabs-left">
            <li class="active"><a href="#tab1" data-toggle="tab">基本信息</a></li>
            <li><a href="#tab2" data-toggle="tab">供应产品</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="tab1">

                <div class="portlet-body form-horizontal form-bordered form-row-stripped">
                    <div class="row">

                        <div class="form-group">
                            <label class="control-label"><span class="required">*</span>@Html.DisplayNameFor(m => m.Name)：</label>
                            <div class="controls">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control input-large" })
                                <span class="help-inline">@Html.ValidationMessageFor(m => m.Name)</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label"><span class="required">*</span>@Html.DisplayNameFor(m => m.Platform)：</label>
                            <div class="controls">
                                @Html.TextBoxFor(m => m.Platform, new { @class = "form-control input-large" })
                                <span class="help-inline">@Html.ValidationMessageFor(m => m.Platform)</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label"><span class="required">*</span>@Html.DisplayNameFor(m => m.URL)：</label>
                            <div class="controls">
                                @Html.TextBoxFor(m => m.URL, new { @class = "form-control input-large", @type="url" })
                                <span class="help-inline">@Html.ValidationMessageFor(m => m.URL)</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label"><span class="required">*</span>@Html.DisplayNameFor(m => m.CS)：</label>
                            <div class="controls">
                                @Html.TextBoxFor(m => m.CS, new { @class = "form-control input-large" })
                                <span class="help-inline">@Html.ValidationMessageFor(m => m.CS)</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label"><span class="required">*</span>@Html.DisplayNameFor(m => m.CSPhone)：</label>
                            <div class="controls">
                                @Html.TextBoxFor(m => m.CSPhone, new { @class = "form-control input-large",})
                                <span class="help-inline">@Html.ValidationMessageFor(m => m.CSPhone)</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label"><span class="required">*</span>@Html.DisplayNameFor(m => m.Contact)：</label>
                            <div class="controls">
                                @Html.TextBoxFor(m => m.Contact, new { @class = "form-control input-large" })
                                <span class="help-inline">@Html.ValidationMessageFor(m => m.Contact)</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label"><span class="required">*</span>@Html.DisplayNameFor(m => m.ContactPhone)：</label>
                            <div class="controls">
                                @Html.TextBoxFor(m => m.ContactPhone, new { @class = "form-control input-large", @id = "mask_mphone" })
                                <span class="help-inline">@Html.ValidationMessageFor(m => m.ContactPhone)</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label"><span class="required">*</span>@Html.DisplayNameFor(m => m.Address)：</label>
                            <div class="controls">
                                @Html.TextBoxFor(m => m.Address, new { @class = "form-control input-xlarge" })
                                <span class="help-inline">@Html.ValidationMessageFor(m => m.Address)</span>
                            </div>
                        </div>


                    </div>
                </div>

            </div>
            <div class="tab-pane" id="tab2">
                @{ var products = ViewBag.Products;
                 
                    
                    <div class="row">                        
                    @foreach (Product product in products)
                    {
                                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                            <div class="thumbnail">
                                                <img src="@product.CoverPicture" alt="" style="width: 200px; height:auto; border: 1px solid gray">
                                                <div class="caption">
                                                    <h4>
                                                    <input class="make-switch" data-on="success" data-off="warning" name="SelectedProduct" type="checkbox" value="@product.ID"
                           @if (Model.Products != null) { var supplierProduct = new HashSet<int>(Model.Products.Select(c => c.ID));  @(Html.Raw(supplierProduct.Contains(product.ID) ? "checked=\"checked\"" : ""))       } />
                            @product.Sku
                                                    </h4>
                                                    <p>
                                                        @product.Name
                                                    </p>
                                
                                                </div>
                                            </div>
                                        </div>
                    }
                </div>               
                }          
              </div>
        </div>
    </div>

}

