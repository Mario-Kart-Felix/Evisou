                            <div class="controls">
                                @Html.TextBoxFor(m => m.Size, new { @class = "form-control input-small mask_size" })
                                <span class="help-inline">@Html.ValidationMessageFor(m => m.Size)</span>
                            </div>
                        </div>

                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="form-group">
                            <label class="control-label">@Html.DisplayNameFor(m => m.PackWeight)：</label>
                            <div class="controls">
                                @Html.TextBoxFor(m => m.PackWeight, new { @class = "form-control input-small" })
                                <span class="help-inline">@Html.ValidationMessageFor(m => m.PackWeight)</span>
                            </div>
                        </div>

                    </td>
                    <td>
                        <div class="form-group">
                            <label class="control-label">@Html.DisplayNameFor(m => m.PackSize)：</label>
                            <div class="controls">
                                @Html.TextBoxFor(m => m.PackSize, new { @class = "form-control input-small" })
                                <span class="help-inline">@Html.ValidationMessageFor(m => m.PackSize)</span>
                            </div>
                        </div>

