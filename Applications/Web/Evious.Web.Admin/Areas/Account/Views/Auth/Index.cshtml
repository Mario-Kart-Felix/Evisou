@using Evious.Web
@using Evious.Core.Config
@model Evious.Account.Contract.Role
@{
    ViewBag.Title = "Welcome";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var adminMenuConfig = CachedConfigContext.Current.AdminMenuConfig;
}
@section PageSpecificJavascriptIncludes{

    <script type="text/javascript">
        $("#navigation").hide();
        $(".sub-menu").show();
        $(".has-sub>a").each(function () {
            $(this).css("background-color", "#313131");

        });
    </script>
}
<div class="row">
    <div class="col-md-12">
        <!-- Page content goes here内页-->
        <div class="p10 m10">
            <!-- BEGIN BLOCKQUOTES PORTLET-->
            <div class="portlet">
                <div class="portlet-title">
                    <h4><i class="fa fa-reorder"></i>@CachedConfigContext.Current.SettingConfig.WebSiteTitle</h4>
                    <div class="tools">
                        <a href="javascript:;" class="collapse"></a>
                        <a href="#portlet-config" data-toggle="modal" class="config"></a>
                        <a href="javascript:;" class="reload"></a>
                        <a href="javascript:;" class="remove"></a>
                    </div>
                </div>

                <div class="portlet-body">
                    <h3></h3>
                    <blockquote>
                        <p>@CachedConfigContext.Current.SettingConfig.WebSiteTitle ，Landing Page Coming soon!</p>
                    </blockquote>
                </div>
            </div>
            <!-- END BLOCKQUOTES PORTLET-->
        </div>

        <div class="portlet box red m10">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-reorder"></i>功能列表
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                </div>
            </div>
            <div class="portlet-body">
                <div>
                    <ul>
                        @foreach (var group in adminMenuConfig.AdminMenuGroups)
                        {
                            <li>
                                <h4>@group.Name</h4>
                                <div class="row">
                                    @foreach (var menu in group.AdminMenuArray)
                                    {
                                        <span class="m10 floatleft"><a href="@menu.Url" class="btn red-stripe">@menu.Name 　<span class="muted">@menu.Info</span></a></span>
                                    }
                                </div>
                            </li>
                        }

                    </ul>

                </div>
            </div>
        </div>
    </div>

</div>
