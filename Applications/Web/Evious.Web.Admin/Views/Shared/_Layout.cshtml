@using Evious.Core.Config
@using Evious.Web
<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8 no-js"> <![endif]-->
<!--[if IE 9]> <html lang="en" class="ie9 no-js"> <![endif]-->
<!--[if !IE]><!-->
<html lang="en" class="no-js">
<!--<![endif]-->
<!-- BEGIN HEAD -->
<head>
    <meta charset="utf-8" />
    <title>@CachedConfigContext.Current.SettingConfig.WebSiteTitle</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="" name="description" />
    <meta content="" name="author" />
    <meta name="MobileOptimized" content="320">
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="@Url.StaticFile("/assets/admin/plugins/font-awesome/css/font-awesome.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.StaticFile("/assets/admin/plugins/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.StaticFile("/assets/admin/plugins/uniform/css/uniform.default.css")" rel="stylesheet" type="text/css" />
    <!-- END GLOBAL MANDATORY STYLES -->

    <!-- BEGIN PAGE LEVEL STYLES -->
    <link href="@Url.StaticFile("/assets/admin/plugins/data-tables/DT_bootstrap.css")" rel="stylesheet" />
    @RenderSection("PageSpecificStyleSheetIncludes", required: false)
    <!-- END PAGE LEVEL STYLES -->

    <!-- BEGIN THEME STYLES -->
    <link href="@Url.StaticFile("/assets/admin/css/style-metronic.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.StaticFile("/assets/admin/css/style.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.StaticFile("/assets/admin/css/style-responsive.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.StaticFile("/assets/admin/css/plugins.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.StaticFile("/assets/admin/css/themes/default.css")" rel="stylesheet" type="text/css" id="style_color" />
    <link href="@Url.StaticFile("/content/styles/jquery.thickbox.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.StaticFile("/content/Styles/admin.main.css")" rel="stylesheet" type="text/css" />   
    <!-- END THEME STYLES -->
   
    <link rel="shortcut icon" href="favicon.ico" />



</head>
<!-- END HEAD -->
<!-- BEGIN BODY -->
<body class="page-header-fixed">
    <!-- BEGIN HEADER -->
    <div class="header navbar navbar-inverse navbar-fixed-top">
        <!-- BEGIN TOP NAVIGATION BAR -->
        @Html.Partial("_Header")
        <!-- END TOP NAVIGATION BAR -->
    </div>
    <!-- END HEADER -->
    <div class="clearfix">
    </div>
    <!-- BEGIN CONTAINER -->
    <div class="page-container">
        <!-- BEGIN SIDEBAR -->
        @Html.Partial("_Menu")        
        <!-- END SIDEBAR -->
        <!-- BEGIN CONTENT -->
        <div class="page-content-wrapper">
            <div class="page-content">
                <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
                <div class="modal fade" id="portlet-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                                <h4 class="modal-title">Modal title</h4>
                            </div>
                            <div class="modal-body">
                                Widget settings form goes here
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn blue">Save changes</button>
                                <button type="button" class="btn default" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                        <!-- /.modal-content -->
                    </div>
                    <!-- /.modal-dialog -->
                </div>
                <!-- /.modal -->
                <!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->
                <!-- BEGIN PAGE HEADER-->
                <div class="row">
                    <div class="col-md-12" id="navigation">
                        <!-- BEGIN STYLE CUSTOMIZER -->
                        @Html.Partial("_Theme")
                        <!-- END STYLE CUSTOMIZER -->
                        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
                        <h3 class="page-title">
                           <span>标题</span>  <small>介绍</small>
                        </h3>
                        <ul class="page-breadcrumb breadcrumb">
                            
                            <li>
                                <i class="fa fa-home"></i>
                                <span>首页</span>
                                <i class="fa fa-angle-right"></i>
                            </li>
                            <li>
                                <span>菜单组</span>
                                <i class="fa fa-angle-right"></i>
                            </li>
                            <li>
                                <span>菜单</span>
                            </li>
                        </ul>
                        <!-- END PAGE TITLE & BREADCRUMB-->
                    </div>
                </div>
                <!-- END PAGE HEADER-->
                <!-- BEGIN PAGE CONTENT-->
                @RenderBody()                
                <!-- END PAGE CONTENT-->
            </div>
        </div>
        <!-- END CONTENT -->
    </div>
    <!-- END CONTAINER -->
    <!-- BEGIN FOOTER -->
    @Html.Partial("_Footer")    
    <!-- END FOOTER -->
        
    <!-- BEGIN JAVASCRIPTS(Load javascripts at bottom, this will reduce page load time) -->
    <script type="text/javascript">
        var staticFileRoot = "@Url.StaticFile()";
    </script>
    <!-- BEGIN CORE PLUGINS -->
    <!--[if lt IE 9]>
       <script src="@Url.StaticFile("/assets/admin/plugins/respond.min.js")"></script>
       <script src="@Url.StaticFile("/assets/admin/plugins/excanvas.min.js")"></script>
       <![endif]-->
    <script src="@Url.StaticFile("/assets/admin/plugins/jquery-1.10.2.min.js" )" type="text/javascript"></script>
    <script src="@Url.StaticFile("/assets/admin/plugins/jquery-migrate-1.2.1.min.js" )" type="text/javascript"></script>
    <!-- IMPORTANT! Load jquery-ui-1.10.3.custom.min.js before bootstrap.min.js to fix bootstrap tooltip conflict with jquery ui tooltip -->
    <script type="text/javascript" src="@Url.StaticFile("/content/scripts/jquery.thickbox.js")"></script>
    <script src="@Url.StaticFile("/assets/admin/plugins/jquery-ui/jquery-ui-1.10.3.custom.min.js")" type="text/javascript"></script>
    <script src="@Url.StaticFile("/assets/admin/plugins/bootstrap/js/bootstrap.min.js")" type="text/javascript"></script>
   <!-- <script src="@Url.StaticFile("/assets/admin/plugins/bootstrap-hover-dropdown/twitter-bootstrap-hover-dropdown.min.js")" type="text/javascript"></script>-->
    <script src="@Url.StaticFile("/assets/admin/plugins/jquery-slimscroll/jquery.slimscroll.min.js")" type="text/javascript"></script>
    <script src="@Url.StaticFile("/assets/admin/plugins/jquery.blockui.min.js")" type="text/javascript"></script>
    <script src="@Url.StaticFile("/assets/admin/plugins/jquery.cokie.min.js")" type="text/javascript"></script>
    <script src="@Url.StaticFile("/assets/admin/plugins/uniform/jquery.uniform.min.js")" type="text/javascript"></script>
    <script src="@Url.StaticFile("/content/scripts/admin.main.js")" type="text/javascript"></script>
    
    <!--  END CORE PLUGINS -->

    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script type="text/javascript" src="@Url.StaticFile("/assets/admin/plugins/select2/select2.min.js")"></script>
    <script type="text/javascript" src="@Url.StaticFile("/assets/admin/plugins/data-tables/jquery.dataTables.js")"></script>
    <script type="text/javascript" src="@Url.StaticFile("/assets/admin/plugins/data-tables/DT_bootstrap.js")"></script>
    <!-- END PAGE LEVEL PLUGINS -->
    @RenderSection("PageSpecificJavascriptIncludes", required: false)


    <script src="@Url.StaticFile("/assets/admin/scripts/core/app.js")" ></script>
      
    <script>
        jQuery(document).ready(function () {
            App.init();            
           
        });
    </script>
    <!-- END JAVASCRIPTS -->
    
</body>
<!-- END BODY -->
</html>
